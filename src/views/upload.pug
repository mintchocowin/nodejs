extends base.pug

block content 
  if errorMessage 
    span = errorMessage
  form(method="POST")
    input(name="title" type="text" placeholder="Title" maxlength=80 required)
    input(name="description" type="text" minlength=20 placeholder="description" required)
    input(name="hashtags" type="text" placeholder="hashtags, seperated by comma" required)
    input(type="submit" value="Upload Video") 